connect http://localhost:8001/echo/;e/cb?token=joe
connected

# Connection request
write method "POST"
write version "HTTP/1.1"
write header host
write header content-length
write header "X-WebSocket-Version" "wseb-1.0"
write header "X-Sequence-No" "0"
write close

read status "201" /.+/
read version "HTTP/1.1"

read /(?<upstream>http:\/\/localhost:8001\/echo\/.+)\n/
read /(?<downstream>http:\/\/localhost:8001\/echo\/.+)\n/

read notify CREATED
read closed

# Downstream
connect await CREATED ${downstream}
connected

write method "GET"
write version "HTTP/1.1"
write header host
write header "X-Sequence-No" "1"
write header content-length
write close

read status "200" /.+/
read header "Content-Type" /(?!text\/plain;charset=windows-1252)/
read header "Connection" "close"
read [0x01 0x30 0x30 0xFF] # NO-OP

