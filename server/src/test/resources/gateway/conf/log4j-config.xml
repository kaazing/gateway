    <logger name="ha">
        <level value="info"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="messaging">
        <level value="info"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="messaging.ha">
        <level value="info"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <root>
        <priority value="all"/>
        <appender-ref ref="ErrorFile"/>
    </root>
</log4j:configuration>
