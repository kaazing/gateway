connect http://localhost:9090/index.html
       option transport tcp://localhost:8081
       # TO gateway No1
connected

write method "GET"
# probably don't even need authorized header
write header "Authorized" "joe:welcome"
write close

read status "401" "Not Authorized"
read notify FIRST_REQUEST_COMPLETE
close

connect await FIRST_REQUEST_COMPLETE





connect http://localhost:9090/index.html
       option transport tcp://localhost:8082
      # TO gateway No2
connected

write method "GET"
# probably don't even need authorized header
write header "Authorized" "joe:welcome"


read status "200" "OK"