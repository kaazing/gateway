# connect to a directory service with cross-origin constraint set and wrong port in origin header of request
connect tcp://localhost:8001
connected

write "GET /index.html HTTP/1.1\r\n"
write "Host: localhost:8001\r\n"
write "Origin: http://localhost:8009/origin\r\n"
write "\r\n"
write notify BARRIER

read await BARRIER
read "HTTP/1.1 403 Forbidden\r\n"

close
closed
