connect tcp://localhost:8110
connected

write "GET / HTTP/1.1" "\r\n"
write "Host: localhost:8110" "\r\n"
write "Host: anotherhost:8110" "\r\n"
write "\r\n"

read "HTTP/1.1 400"

accept tcp://localhost:8080
accepted
connected


read "GET / HTTP/1.1" "\r\n"
read /Via: 1.1 kaazing-.+/ "\r\n"
read "User-Agent: Kaazing Gateway\r\n"

read "Host: localhost:8080" "\r\n"
read "Host: anotherhost:8080" "\r\n"
read "Connection: close\r\n"
read "\r\n"

write "HTTP/1.1 400 BAD REQUEST" "\r\n"
write "\r\n"

close
closed
