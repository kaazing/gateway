#
# client
#

connect http://localhost:8110/a
connected

write method "GET"
write parameter "field" "value" "value2" "value3"
write close

read status "200" "OK"
read header "some" "header"
read header "Content-Length" "7"
read "content"
read closed

close
closed

#
# server
#

accept tcp://localhost:8080
accepted
connected

read "GET /a?field=value&field=value2&field=value3 HTTP/1.1\r\n"
read /Via: 1.1 kaazing-.+/ "\r\n"
read "User-Agent: Kaazing Gateway\r\n"
read "Host: localhost:8080\r\n"
read "Connection: close\r\n"
read "\r\n"

write "HTTP/1.1 200 OK\r\n"
write "some: header\r\n"
write "Content-Length: 7\r\n"
write "\r\n"
write "content"

closed
