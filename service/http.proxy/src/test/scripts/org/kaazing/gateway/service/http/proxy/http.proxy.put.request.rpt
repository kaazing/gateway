#
# client
#

connect "http://localhost:8110/hello"
connected

write http:method "PUT"
write http:version "HTTP/1.1"
write http:host
write http:content-length
write close

read http:status "200" "OK"
read http:version "HTTP/1.1"

close
closed

#
# server
#

accept "http://localhost:8080/hello"
accepted
connected

read http:method "PUT"
read closed

write http:status "200" "OK"
write http:content-length
write flush

close
closed
