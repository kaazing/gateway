connect tcp://localhost:8000
connected

write "POST /path HTTP/1.1\r\n"
write "Host: localhost:8000\r\n"
write "Origin: http://localhost:8000\r\n"
write "Content-Length: 12\r\n"
write "Content-Type: text/plain;charset=UTF-8\r\n"
write "\r\n"
write "Hello, world"
write notify BARRIER

read await BARRIER
read "HTTP/1.1 200 OK\r\n"
read "Content-Length: 12\r\n"
read "Content-Type: text/plain;charset=UTF-8\r\n"
read "\r\n"
read "Hello, world"

close
closed
