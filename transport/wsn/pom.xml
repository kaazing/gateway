            <artifactId>gateway.transport.pipe</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.kaazing</groupId>
            <artifactId>gateway.transport.ssl</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
