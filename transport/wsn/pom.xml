    <parent>
        <groupId>org.kaazing</groupId>
        <artifactId>gateway</artifactId>
        <version>develop-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <artifactId>gateway.transport.wsn</artifactId>
    <description>Native WebSocket (RFC 6455) transport</description>
    <name>WSN Transport</name>

    <url>https://github.com/kaazing/gateway.transport.wsn.git</url>
    <scm>
        <connection>scm:git:${project.scm.url}</connection>
        <developerConnection>scm:git:${project.scm.url}</developerConnection>
        <url>git@github.com:kaazing/gateway.transport.wsn.git</url>
    </scm>

