# Autobahn test case 7.7.13

# Case Description
# Send close with valid close code 4999

# Case Expectation
# Clean close with normal or echoed code

connect tcp://localhost:8555
connected

write "GET /echo HTTP/1.1\r\n"
write "User-Agent: AutobahnTestSuite/0.6.1-0.8.8\r\n"
write "Host: localhost:8555\r\n"
write "Upgrade: WebSocket\r\n"
write "Connection: Upgrade\r\n"
write "Pragma: no-cache\r\n"
write "Cache-Control: no-cache\r\n"
write "Sec-WebSocket-Key: 2zh4bZ61ud7q2+FcJo1upQ==\r\n"
write "Sec-WebSocket-Version: 13\r\n"
write "\r\n"

read "HTTP/1.1 101 Web Socket Protocol Handshake\r\n"
read "Connection: Upgrade\r\n"
read /Date: .*\r\n/
read "Sec-WebSocket-Accept: iXoriEmbRHVzIzP3GTkr1MnYaFc=\r\n"
read "Server: Kaazing Gateway\r\n"
read "Upgrade: WebSocket\r\n"
read "\r\n"

# Websocket close with normal closure (given close code 4999)
write [0x88 0x82 0x11 0x04 0x6f 0xcd 0x02 0x83]
read [0x88 0x02 0x13 0x87]

close
closed