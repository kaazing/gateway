# Autobahn test case 6.1.2

# Case Description
# Send fragmented text message, 3 fragments each of length 0.

# Case Expectation
# A message is echo'ed back to us (with empty payload).

connect tcp://localhost:8555
connected

write "GET /echo HTTP/1.1\r\n"
write "User-Agent: AutobahnTestSuite/0.6.1-0.8.8\r\n"
write "Host: localhost:8555\r\n"
write "Upgrade: WebSocket\r\n"
write "Connection: Upgrade\r\n"
write "Pragma: no-cache\r\n"
write "Cache-Control: no-cache\r\n"
write "Sec-WebSocket-Key: XWge9hvZJR71ZvORhvboDg==\r\n"
write "Sec-WebSocket-Version: 13\r\n"
write "\r\n"

read "HTTP/1.1 101 Web Socket Protocol Handshake\r\n"
read "Connection: Upgrade\r\n"
read /Date: .*\r\n/
read "Sec-WebSocket-Accept: 1U/TwcuJoQ1XCTqsDnW15HoPjqE=\r\n"
read "Server: Kaazing Gateway\r\n"
read "Upgrade: WebSocket\r\n"
read "\r\n"

# Websocket text in three fragments of length zero
write [0x01 0x80 0x0d 0x94 0x6d 0xf8]
write [0x00 0x80 0x3a 0x10 0x4d 0x86]
write [0x80 0x80 0x3f 0xf7 0xe6 0x4b]
read [0x81 0x00]

# Websocket close with normal closure
write [0x88 0x82 0xa9 0x12 0xd3 0x26 0xaa 0xfa]
read [0x88 0x02 0x03 0xe8]

close
closed